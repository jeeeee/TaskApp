<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jp.teckacademy.takeda.ryoji.taskapp.CategoryActivity"
    tools:showIn="@layout/activity_category">

    <EditText
        android:id="@+id/category_make_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="カテゴリ作成"/>

    <Button
        android:id="@+id/category_make_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_make_edit"
        android:layout_alignParentRight="true"
        android:text="決定"/>

</RelativeLayout>